package com.company;
import java.lang.reflect.Array;
import java.util.ArrayList;
import java.util.Scanner;
import com.company.UserInput;
import java.lang.Math;

public class Main {
    public static void main(String args[]) {
    
        //Task 1
        LinkedList<Circle> circleLinkedList = new LinkedList<>();
        for(int i = 2; i <= 1001; i++) {
            circleLinkedList.add(new Circle(i, new Point(0,0)));
        }

        //Task 2
        for(int i = 0; i < circleLinkedList.size(); i++) {
            double cRadLL = circleLinkedList.get(i).getRad();
            for(int j = 0; j < circleLinkedList.size(); j++) {
                if(circleLinkedList.get(j).getRad() % cRadLL == 0)
                    circleLinkedList.remove(j);
            }
        }

        //Task 3
        ArrayList<Circle> circleArrayList = new ArrayList<>();
        for(int i = 2; i <= 1001; i++) {
            circleArrayList.add(new Circle(i, new Point(0,0)));
        }

        //Task 4
        for(int i = 0; i < circleArrayList.size(); i++) {
            double cRadAL = circleArrayList.get(i).getRad();
            for(int j = 0; j < circleArrayList.size(); j++) {
                if (circleArrayList.get(j).getRad() % cRadAL == 0)
                    circleArrayList.remove(j);
            }
        }
    }
}
